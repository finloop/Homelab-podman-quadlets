[Unit]
Description=A template for running K8s workloads via podman-kube-play
Documentation=man:podman-kube-play(1)
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
TimeoutStopSec=70
ExecStart=/usr/local/bin/podman kube play --replace --service-container=true %I
ExecStop=/usr/local/bin/podman kube down %I
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target

